{% macro input(id, type, label, placeholder) %}
<div class="form-floating">
  <input
    class="form-control"
    id="{{ id }}"
    type="{{ type }}"
    placeholder="{{ placeholder }}"
  />
  <label for="{{ id }}">{{ label }}</label>
</div>

{% endmacro %} {% macro textarea(id, label, placeholder, rows="12rem") %}
<div class="form-floating">
  <textarea
    class="form-control"
    id="{{ id }}"
    placeholder="{{ placeholder }}"
    style="height: {{ rows }}"
  ></textarea>
  <label for="{{ id }}">{{ label }}</label>
</div>
{% endmacro %}
